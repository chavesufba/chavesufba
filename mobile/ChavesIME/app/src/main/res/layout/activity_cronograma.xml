<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".controller.CronogramaActivity"
    android:contextClickable="true">


    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:titleTextColor="@color/white"
        android:theme="@style/ThemeOverlay.AppCompat"
        android:id="@+id/homeToolbar"
        android:textAlignment="center">
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/homeToolbar"
        android:layout_marginTop="15dp"
        android:background="@drawable/background_relative"
        android:id="@+id/layoutCronograma"
        android:elevation="7dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/sala"
            android:id="@+id/reservaTextInfo"
            android:gravity="center_vertical"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignBottom="@+id/ddownSala"
            android:textSize="20dp"
            android:layout_marginLeft="25dp" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ddownSala"
            android:spinnerMode="dropdown"
            android:layout_gravity="right"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/cronogramaTextHorario"
            android:layout_marginLeft="40dp"
            android:layout_alignParentTop="true"
            android:gravity="end" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:ems="10"
            android:id="@+id/cronogramaETData"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/reservaTextInfo"
            android:layout_alignParentEnd="false"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:gravity="end"
            android:autoText="false"
            android:editable="false"
            android:focusable="false"
            android:clickable="true"
            android:textIsSelectable="false"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:onClick="showDatePickerDialog"
            android:layout_marginRight="20dp"
            android:textSize="22dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/data"
            android:id="@+id/cronogramaTextData"
            android:layout_gravity="left|center_vertical"
            android:gravity="center_vertical"
            android:textSize="20dp"
            android:layout_below="@+id/reservaTextInfo"
            android:layout_marginTop="30dp"
            android:layout_alignBottom="@+id/cronogramaETData"
            android:layout_marginLeft="25dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/cronogramaETHorario"
            android:layout_marginLeft="20dp"
            android:autoText="false"
            android:editable="false"
            android:focusable="false"
            android:clickable="true"
            android:textIsSelectable="false"
            android:textColor="@color/colorPrimary"
            android:layout_marginRight="20dp"
            android:textSize="22dp"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/cronogramaETData"
            android:gravity="end"
            android:inputType="none"
            android:textStyle="bold"
            android:onClick="showTimePickerDialog" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/horario"
            android:id="@+id/cronogramaTextHorario"
            android:layout_gravity="left"
            android:layout_below="@+id/cronogramaETData"
            android:layout_marginTop="30dp"
            android:textIsSelectable="true"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_marginLeft="25dp"
            android:layout_alignBottom="@+id/cronogramaETHorario" />


    </RelativeLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonBuscarCronograma"
        android:text="@string/buscarCronograma"
        android:textColor="@color/white"
        android:background="@drawable/botao_redondo"
        android:clickable="false"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="false"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="false"
        android:layout_below="@+id/layoutCronograma"
        android:layout_marginTop="20dp"
        android:onClick="botaoBuscarCronograma"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp" />

</RelativeLayout>
